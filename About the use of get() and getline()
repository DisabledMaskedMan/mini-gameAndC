#include <iostream>

using namespace std;

int main()
{
  char a[20] = "bbbbbbbbbbbbbbbbbbb";
	cout << a << endl;
	//1.cin
	cin >> a;					//cin使用空白来结束输入，cin在输入结束后会自动加空字符（例如'\0'）//就算是第一个也不会因空语句失效
	cin >> a;					//不会因为空语句失效
	cout << a << endl;		//但不会拿走缓冲区的'\n'

	char b[20] = "ccccccccccccccccccc"; //只能为19个c，不然报错，因为系统要在最后面加上'\0'
	cout << b << endl;
	//2.getline()
	cin.getline(b, 10);				//同样只读9个字符，因为要加上'\0',剩余的留在缓冲区，也会因'\n'结束
	cin.getline(b, 10);				//若上一个语句的输入为空语句（只有'\n'）则失效（设置了失效位）
	cin.getline(b, 10);				//会拿走缓冲区的'\n'
	cout << b << endl;

	char c[20] = "ddddddddddddddddddd";
	cout << c << endl;
	//3.get()
	cin.get(c, 10);					//同样只读9个字符，因为要加上'\0',剩余的留在缓冲区，也会因'\n'结束
	cout << c << endl;
	cin.get();						//加一条此语句可以拿走缓冲区里的'\n'但只能拿一个字符（get(ch)）
	cin.get(c, 10);					//若上一个语句的输入为空语句不会失效，但会因缓冲区里上一条get()没有拿走的'\n'而结束
	cout << c << endl;
  
  return 0;
}
